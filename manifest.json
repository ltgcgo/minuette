{
	"manifest_version": 2,
	"name": "OptiShade",
	"version": "0.1",
	"description": "Probe page events safely.",
	"page_action": {
		"browser_style": false,
		"default_title": "Event Prober"
	},
	"background": {
		"page": "background.htm"
	},
	"minimum_chrome_version": "59.0.0",
	"options_page": "placeholder.htm",
	"options_ui": {
		"page": "placeholder.htm",
		"browser_style": false,
		"open_in_tab": true
	},
	"permissions": [
		"activeTab",
		"tabs",
		"background",
		"cookies",
		"webNavigation",
		"webRequest",
		"webRequestBlocking",
		"contextMenus",
		"http://*/*",
		"https://*/*",
		"<all_urls>"
	]
}
