{
	"manifest_version": 2,
	"name": "Minuette",
	"version": "0.0.3",
	"description": "‚è≥ Intercept and orchestrate events, with unicorn power!",
	"homepage_url": "https://www.ltgc.cc/project/?view=/minuette",
	"browser_action": {
		"default_popup": "web/popup.htm",
		"default_title": "Minuette"
	},
	"background": {
		"page": "background.htm",
		"persistent": true
	},
	"minimum_chrome_version": "81.0.0",
	"options_page": "placeholder.htm",
	"options_ui": {
		"page": "web/options.htm",
		"open_in_tab": true
	},
	"permissions": [
		"activeTab",
		"tabs",
		"cookies",
		"webNavigation",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],
	"content_scripts": [],
	"content_security_policy": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; object-src 'self'; connect-src *;",
	"web_accessible_resources": ["*"]
}
